{
	"compilerOptions": {
		"target": "ES2017",
		"module": "ESNEXT",
		"rootDir": "./src",
		"outDir": "./dist",
		"strict": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationDir": "./dist"
	},
	"include": ["src/**/*.ts"],
	"exclude": ["tests/**/*.test.js"]
}