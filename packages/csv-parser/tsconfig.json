{
	"compilerOptions": {
		"target": "es6",
		"lib": [ "es2019", "DOM", "ES6" ,"DOM.Iterable", "ScriptHost"],
		"module": "ESNEXT",
		"rootDir": "./src",
		"outDir": "./dist",
		"strict": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationDir": "./dist"
	},
	"include": ["src/**/*.ts"],
	"exclude": ["tests/**/*.test.js"]
}